@model Syllabus

@{
    ViewData["Title"] = "Delete syllabus";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                   <div class="form-group">
                        <label asp-for="Objective" class="control-label"></label>
                        <input asp-for="Objective" class="form-control" readonly />
                        <span asp-validation-for="Objective" class="text-danger"></span>
                    </div>
                         <div class="form-group">
                        <label asp-for="Outcome" class="control-label"></label>
                        <input asp-for="Outcome" class="form-control" readonly />
                        <span asp-validation-for="Outcome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AssessmentMethods" class="control-label"></label>
                        <input asp-for="AssessmentMethods" class="form-control" readonly />
                        <span asp-validation-for="AssessmentMethods" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LearningMethods" class="control-label"></label>
                        <input asp-for="LearningMethods" class="form-control" readonly />
                        <span asp-validation-for="LearningMethods" class="text-danger"></span>
                    </div>
           

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>