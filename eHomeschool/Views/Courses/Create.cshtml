@model NewCourseVM
@using eHomeschool.Data.Enums;
@using eHomeschool.Data.ViewModels;


@{
    ViewData["Title"] = "Create a new movie";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new course</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Short_description" class="control-label"></label>
                                <textarea asp-for="Short_description" class="form-control"></textarea>
                                <span asp-validation-for="Short_description" class="text-danger"></span>
                            </div>
                        </div>
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PictureUrl" class="control-label"></label>
                                <input asp-for="PictureUrl" class="form-control" />
                                <span asp-validation-for="PictureUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="EducationalStageId" class="control-label"></label>
                                <select asp-for="EducationalStageId" class="form-control" asp-items="ViewBag.EducationalStages"></select>
                                <span asp-validation-for="EducationalStageId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Language" class="control-label"></label>
                                <select asp-for="Language" class="form-control" asp-items="Html.GetEnumSelectList<LanguageCategory>()"></select>
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SyllabusId" class="control-label"></label>
                                <select asp-for="SyllabusId" class="form-control" asp-items="ViewBag.Syllabi"></select>
                                <span asp-validation-for="SyllabusId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="InstructorInformationId" class="control-label"></label>
                                <select asp-for="InstructorInformationId" class="form-control" asp-items="ViewBag.InstructorsInfo"></select>
                                <span asp-validation-for="InstructorInformationId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LectureIds" class="control-label"></label>
                                <select asp-for="LectureIds" class="form-control" asp-items="ViewBag.Lectures" multiple></select>
                                <span asp-validation-for="LectureIds" class="text-danger"></span>
                            </div>
                        </div>
                   
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $("#PictureUrl").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}