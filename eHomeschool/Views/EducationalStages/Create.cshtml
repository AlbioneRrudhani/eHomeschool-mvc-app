@model EducationalStage
@using eHomeschool.Data.Enums;


@{
    ViewData["Title"] = "Add a new educational stage";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New educational stage</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Grade" class="control-label"></label>
                        <select asp-for="Grade" class="form-control" asp-items="Html.GetEnumSelectList<GradeCategory>()"></select>
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Semester" class="control-label"></label>
                        <select asp-for="Semester" class="form-control" asp-items="Html.GetEnumSelectList<SemesterCategory>()"></select>
                        <span asp-validation-for="Semester" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StageName" class="control-label"></label>
                        <select asp-for="StageName" class="form-control" asp-items="Html.GetEnumSelectList<StageNameCategory>()"></select>
                        <span asp-validation-for="StageName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>





                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>

                </form>


            </div>

        </div>
    </div>
</div>